<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ilanguage.aublog"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_aublog"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_aublog_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--<activity-->
        <!--android:name="com.google.ads.AdActivity"-->
        <!--android:configChanges="keyboard|keyboardHidden|orientation" />-->


        <service android:name="ca.ilanguage.aublog.service.DictationRecorderService" />
        <service android:name="ca.ilanguage.aublog.service.NotifyingTranscriptionIntentService" />

        <activity
            android:name="ca.ilanguage.aublog.service.NotifyingController"
            android:label="@string/app_name"></activity>

        <activity
            android:name="ca.ilanguage.aublog.ui.MainMenuActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ca.ilanguage.aublog.preferences.SetPreferencesActivity" />

        <activity
            android:name="ca.ilanguage.aublog.ui.EditBlogEntryActivity"
            android:label="Edit blog entry"></activity>
        <activity
            android:name="ca.ilanguage.aublog.ui.AuBlog"
            android:label="AuBlog" />
        <activity
            android:name="ca.ilanguage.aublog.ui.ViewDraftTreeActivity"
            android:label="View drafts"></activity>
        <activity
            android:name="ca.ilanguage.aublog.ui.AboutActivity"
            android:label="About AuBlog"></activity>

        <activity
            android:name="ca.ilanguage.aublog.ui.PublishActivity"
            android:label="Publish blog entry"
            android:theme="@style/Theme.Transparent"></activity>

        <provider
            android:name="ca.ilanguage.aublog.db.AuBlogHistoryProvider"
            android:authorities="ca.ilanguage.aublog.provider.AuBlogHistory" />
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /><!-- TODO remove this permission -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <receiver
        android:name="com.google.android.apps.analytics.AnalyticsReceiver"
        android:exported="true">
        <intent-filter>
            <action android:name="com.android.vending.INSTALL_REFERRER" />
        </intent-filter>
    </receiver>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />
</manifest>
